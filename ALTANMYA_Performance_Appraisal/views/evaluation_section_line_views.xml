<odoo>
    <data>
        <record id='evaluation_section_line_view_form' model='ir.ui.view'>
            <field name="name">evaluation.section.line.view.form</field>
            <field name="model">evaluation.section.line</field>
            <field name="arch" type="xml">
                <form string="Evaluation Section Line">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="criterion_id" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="score" readonly="1"/>
                                <field name="weight"/>
                                <field name="section_type"/>
                            </group>
                            <group>
                                <field name="final_score"/>
                                <field name="notes"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>