<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_view_firebase_settings" model="ir.ui.view">
        <field name="name">res_config_view_firebase_settings</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="90"/>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='invite_users']" position="after">
                <div id="booking_setting">
                    <h2 id="Booking_setting">Booking Resource Settings</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-12 o_setting_box">
                            <div class="o_setting_right_pane">
                                <div class="content-group mt16">
                                    <label for="max_multi_booking_number" class="col-6 col-lg-6 o_light_label"/>
                                    <field name="max_multi_booking_number"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
